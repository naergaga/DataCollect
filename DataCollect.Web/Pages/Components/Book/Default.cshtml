@model BookModel

@if (Model.CanExport) { 
<div class="d-flex">
    <div>工作薄:@Model.Book.Name</div>
    <a asp-controller="Book" asp-action="Export" asp-route-id="@Model.Book.Id">导出</a>
</div>
}
else
{
    <h5>@Model.Book.Name</h5>
}
@foreach (var sheet in Model.Book.Sheets)
{
    <h5>@sheet.Name</h5>
    @*<ul class="sheet-item d-flex">
            @foreach (var col in sheet.Columns)
            {
                <li>@col.Name</li>
            }
        </ul>*@
    <table>
        <tr>
            @foreach (var col in sheet.Columns)
            {
                <th>@col.Name</th>
            }
            @if (Model.Edit)
            {
                <th></th>
            }
        </tr>
        @if (sheet.Rows != null)
        {
            @foreach (var row in sheet.Rows)
            {
                <tr>
                    @foreach (var data in row.Data)
                    {
                        <td>@data.Value</td>
                    }
                    @if (Model.Edit)
                    {
                        <td><a asp-controller="Event" asp-action="RemoveRow" asp-route-id="@row.Id">删除</a></td>
                    }
                </tr>
            }
        }
    </table>
}
