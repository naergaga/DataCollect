@page
@model DataCollect.Web.Pages.Event.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>创建</h2>

<h4>收集任务</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CollectEvent.Name" class="control-label"></label>
                <input asp-for="CollectEvent.Name" class="form-control" />
                <span asp-validation-for="CollectEvent.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="创建" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">返回工作簿主页</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
