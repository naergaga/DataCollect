@page "{id}"
@model DataCollect.Web.Pages.Event.EditModel

@{
    ViewData["Title"] = "任务修改";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CollectEvent.Id" />
            <div class="form-group">
                <label asp-for="CollectEvent.Name" class="control-label"></label>
                <input asp-for="CollectEvent.Name" class="form-control" />
                <span asp-validation-for="CollectEvent.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="CollectEvent.Published" /> @Html.DisplayNameFor(model => Model.CollectEvent.Published)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">返回任务主页</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
